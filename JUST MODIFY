      { name: 'Transactions', path: '/txns' }
    ]
  },
  auditor: {
    password: 'audit123',
    pages: [
      { name: 'Print Preview', path: '/print' },
      { name: 'Transactions', path: '/txns' }
    ]
  }
};

export default function Login() {
  const [username, setUsername] = useState('');
